<article id="messages-form">
    <% if (error) {%>
        <div class="messages-row req-error">
            <p><%= error %></p>
        </div>    
    <% } else { %>
        <h2><%= box.name + ', ID:[' + box.id + ']' %></h2>
        <p><%= 'Number of messages: ' + box.count %></p>
        <% messages.forEach( message => { %>
        <div class="messages-row">
            <div id="message-complete-<%= message.id %>" class="wrapper message-complete">
                <button class="message-button hide-message-button" id="hide-message" code="<%= message.id %>">&#x276f;</button>
                <h3>Message <%= message.id %></h3>
                <p>Sent at: <%= message.sentAt %></p>
                <textarea rows="4" cols="80" readonly><%= message.text %></textarea>
                <span><%= message.subject %></span><a href="mailto:<%= message.from %>">(<%= message.from %>)</a>
            </div>
            <div id="message-title-<%= message.id %>" class="wrapper message-title">
                <button class="message-button show-message-button" id="show-message" code="<%= message.id %>">&#x276f;</button>
                <h3>Message <%= message.id %></h3>
            </div>
        </div>
        <% }); 
    } %>
</article>