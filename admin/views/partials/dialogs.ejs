<div class="fog-frame-x" id="logout-dialog">
    <section class="frame">
        <div id="logout-frame">
            <h3>Logout</h3>
            <p>Do you really want to logout?</p>
            <div id="buttons">
                <button id="logout-yes">Yes</button>
                <button id="logout-no">No</button>
            </div>
        </div>
    </section>
</div>

<div class="fog-frame-x" id="delete-category-dialog">
    <section class="frame">
        <div id="category-delete-frame">
            <form method="POST" action="/categories/delete">
                <h3>Delete Category</h3>
                <p>Do you want to delete this category?</p>
                <input type="hidden" id="category_to_delete_id" name="id" value=""/>
                <div id="buttons">
                    <button id="category-delete-yes" type="submit">Yes</button>
                    <button id="category-delete-no">No</button>
                </div>
            </form>
        </div>
    </section>
</div>