<div class="fog-frame-x" id="logout-dialog">
    <section class="frame">
        <div id="logout-frame">
            <h3>Logout</h3>
            <p>Do you really want to logout?</p>
            <div id="buttons">
                <button id="logout-yes">Yes</button>
                <button id="logout-no">No</button>
            </div>
        </div>
    </section>
</div>

