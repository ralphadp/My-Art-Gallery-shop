<div class="fog-frame-x" id="piece-form">
    <section class="frame">
        <div id="piece-info">
            <div class="row">
                <div class="label">Name:</div><div class="content" id="pieceName"></div>
            </div>
            <div class="row">
                <div class="label">Artist:</div><div class="content" id="pieceArtist"></div>
            </div>
            <div class="row">
                <div class="label">Type:</div><div class="content" id="pieceType"></div>
            </div>
            <div class="row">
                <div class="label">Date:</div><div class="content" id="pieceDate"></div>
            </div>
            <div class="row">
                <div class="label">Size:</div><div class="content" id="pieceSize"></div>
            </div>
            <div class="row">
                <div class="label">Price:</div><div class="content" id="piecePrice"></div>
            </div>
            <div class="row">
                <div class="label">State:</div><div class="content" id="piecePicked"></div>
            </div>
            <% if (currentUser.userExtId) { %>
            <div class="row">
                <div id="paypal-button-container"></div>
            </div>
            <% } %>
        </div>
    </section>
</div>

<div class="fog-frame-x" id="piece-maximized">
    <section class="photo">
        <img id="photo-image" >
    </section>
</div>
