<div class="fog-frame-x" id="piece-form">
    <section class="frame">
        <div id="piece-info">
            <div class="row">
                <div class="label">Name:</div><div class="content" id="pieceName"></div>
            </div>
            <div class="row">
                <div class="label">Artist:</div><div class="content" id="pieceArtist"></div>
            </div>
            <div class="row">
                <div class="label">Type:</div><div class="content" id="pieceType"></div>
            </div>
            <div class="row">
                <div class="label">Date:</div><div class="content" id="pieceDate"></div>
            </div>
            <div class="row">
                <div class="label">Size:</div><div class="content" id="pieceSize"></div>
            </div>
            <div class="row">
                <div class="label">Price:</div><div class="content" id="piecePrice"></div>
            </div>
            <div class="row">
                <div class="label">State:</div><div class="content" id="piecePicked"></div>
            </div>
        </div>
    </section>
</div>

<div class="fog-frame-x" id="piece-maximized">
    <section class="photo">
        <img id="photo-image" >
    </section>
</div>

<div class="fog-frame-x" id="list">
    <section class="frame">
        <div id="available-list-of-pieces">
            <h3>ALL AVAILABLE PIECES</h3>
            <%  let alternate = true; 
                for (let key in piecePhoto) { 
                    if (piecePhoto.hasOwnProperty(key)) { 
                        const item = piecePhoto[key];
            %>
                    <div class="list-item-row <%= alternate ? 'pair' : 'odd' %>" id="<%= item.id %>">
                        <div id="a-piece-name"><%= item.name %></div>
                        <div id="a-artist"><%= item.artist %></div>
                    </div>
            <%  alternate = !alternate;
                }} 
            %>
            
        </div>
    </section>
    </div>

<div class="fog-frame-x" id="cart-picking">
    <section class="frame">
        <div id="picked-pieces">
            <h3>In-cart pieces</h3>
            <% for(let index = 0; index < cart.length; index++) { %>
                <div class="pick-item-row"><input type="checkbox" id="<%= cart[index].id %>" checked><%= cart[index].name %></div>
            <% } %>
            <button id="update-picked">Update</button>
        </div>
    </section>
</div>