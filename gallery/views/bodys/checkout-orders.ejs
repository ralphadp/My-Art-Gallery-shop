<div class="title" <%= (typeof titlePage === 'string') ? 'style=display:block' : 'style=display:none' %>>
    <h1><%= (typeof titlePage !== 'undefined') ? titlePage : '' %></h1>
</div>

<div class="thumbs-content">
    <article id="form-admin">
        <div class="table-admin">
            <div class="table-header head-trading"><%= tableTitle %></div>
            
            <table cellspacing="0">
                <tr>
                    <th>Id</th>
                    <th>Order Id</th>
                    <th>Piece Id</th>
                    <th>Piece Description</th>
                    <th>Buy Datetime</th>
                    <th>Payer Id</th>
                    <th>Payer Complete Name</th>
                    <th>Payer Amount</th>
                    <th>Payer Currency</th>
                </tr>
    
                <% orders.forEach(row => { %>
                    <tr>
                        <td><%= row.id %></td>
                        <td><%= row.orderId %></td>
                        <td><%= row.pieceId %></td>
                        <td><%= row.pieceDescription %></td>
                        <td><%= row.buyDatetime %></td>
                        <td><%= row.payerId %></td>
                        <td><%= row.payerCompleteName %></td>
                        <td><%= row.payerAmount %></td>
                        <td><%= row.payerCurrency %></td>
                    </tr>
                <% }); %>
    
            </table>
        </div>
    </article>
</div>
